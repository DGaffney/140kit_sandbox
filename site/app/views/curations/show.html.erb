<h1><%= @curation.name %></h1>
<h2>Overview</h2>
<ul>
  <li>Researcher:<%= link_to @curation.researcher.user_name, url(:researcher, @curation.researcher)%></li>
  <li>Created at:<%= @curation.created_at %></li>
  <li><%= link_to @curation.tweets_count==1 ? @curation.tweets_count.to_s+" Tweet" : @curation.tweets_count.to_s+" Tweets", url(:tweets, :curation_id => @curation.id) %></li>
  <li><%= link_to @curation.users_count==1 ? @curation.users_count.to_s+" User" : @curation.users_count.to_s+" Users", url(:users, :curation_id => @curation.id) %></li>
  <li><%= link_to @curation.entities_count==1 ? @curation.entities_count.to_s+" Entity" : @curation.entities_count.to_s+" Entities", url(:entities, :curation_id => @curation.id) %></li>
  <li><%= link_to @curation.datasets.count==1 ? @curation.datasets.count.to_s+" Dataset" : @curation.datasets.count.to_s+" Datasets", url(:datasets, :curation_id => @curation.id) %></li>
</ul>
<h2>Analysis</h2>
<ul>
  <% for analytical_offering in @analytical_offerings %>
    <li><%= analytical_offering.title %> (<% if @curation.analysis_metadatas_scoped(analytical_offering).length == 0 %>None added. <%= link_to "Add one now?", url(:analysis_metadata, :new, :analytical_offering_id => analytical_offering.id, :curation_id => @curation.id) %><% else %><%= @curation.analysis_metadatas_scoped(analytical_offering).length == 1 ? "#{@curation.analysis_metadatas_scoped(analytical_offering).length} analysis" : "#{@curation.analysis_metadatas_scoped(analytical_offering).length} analyses"%> processed. <%= link_to "Another with different settings?", url(:analysis_metadata, :new, :analytical_offering_id => analytical_offering.id, :curation_id => @curation.id) %><% end %>)</li>
    <% if @curation.analysis_metadatas_scoped(analytical_offering).length != 0 %>
    <ul>
      <% for analysis_metadata in @curation.analysis_metadatas_scoped(analytical_offering) %>
        <% vars = "Variables: "
           analysis_metadata.variables.collect{|var| analysis_metadata.variables.last==var ? vars+="#{var.name}: #{var.value}" : vars+="#{var.name}: #{var.value}, "}
        -%>
        <li><%= link_to vars, url(:analysis_metadata, analysis_metadata) %></li>
      <% end %>
    </ul>
    <% end %>
  <% end %>
</ul>