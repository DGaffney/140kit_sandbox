<h1>Listing graphs</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Format</th>
    <th>Scrape</th>
    <th>Hour</th>
    <th>Minute</th>
    <th>Date</th>
    <th>Written</th>
    <th>Lock</th>
    <th>Flagged</th>
  </tr>

<% @graphs.each do |graph| %>
  <tr>
    <td><%=h graph.title %></td>
    <td><%=h graph.format %></td>
    <td><%=h graph.scrape_id %></td>
    <td><%=h graph.hour %></td>
    <td><%=h graph.minute %></td>
    <td><%=h graph.date %></td>
    <td><%=h graph.written %></td>
    <td><%=h graph.lock %></td>
    <td><%=h graph.flagged %></td>
    <td><%= link_to 'Show', graph %></td>
    <td><%= link_to 'Edit', edit_graph_path(graph) %></td>
    <td><%= link_to 'Destroy', graph, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

