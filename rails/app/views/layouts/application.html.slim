            a.btn.btn-navbar data-toggle="collapse" data-target=".nav-collapse"
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.brand href="#" Project name
            .nav-collapse
              ul.nav
                li.active
                  a href="#" Home
                li
