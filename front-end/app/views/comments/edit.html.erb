<h1>Editing comment</h1>
<% form_for(@comment) do |f| -%>
  <%= f.error_messages %>
  <p>
    <%= f.label :researcher_id %><br />
    <%= f.text_field :researcher_id %>
  </p>
  <p>
    <%= f.label :post_id %><br />
    <%= f.text_field :post_id %>
  </p>
  <p>
    <%= f.label :comment %><br />
    <%= f.text_area :comment %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end -%>
<%= link_to 'Show', @comment %> | <%= link_to 'Back', comments_path %>