                    | Dropdown 
                    b.caret
                  ul.dropdown-menu
                    li
                      a href='#' Action
                    li
                      a href='#' Another action
                    li
                      a href='#' Yet another action
                    li.divider
                    li
                      a href='#' Separated link

      // header.jumbotron.subhead
        /* .subnav*/
          ul.nav.nav-pills
            li
