<div id="imageAdd">
	<% form_for(:image, :url => images_path, 
	                      :html => { :multipart => true}) do |f| -%>

	  <%= f.hidden_field :researcher_id, :value => @researcher.id %>
	  <p>
	    <label for="image">Upload an Image:</label>
	    <input id="image_uploaded_data" name="image[uploaded_data]" size="30" type="file" />
	  </p>
	  <p>
	    <%= submit_tag 'Change Image' %>
	  </p>
	<% end -%>
</div>