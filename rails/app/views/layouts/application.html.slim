html
  head
    title
      | 140kit
      = ": #{@page_title}" if @page_title
    /[if lt IE 9]
      script src="http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag 'application'
    /* link rel="stylesheet" href="/css/bootstrap-responsive.min.css"*/
